<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

  <include
      layout="@layout/toolbar_view"
      android:id="@+id/toolbar_view" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10"
            android:orientation="vertical">

            <!--      <EditText-->
            <!--          android:id="@+id/nominal"-->
            <!--          android:layout_width="match_parent"-->
            <!--          android:layout_height="@dimen/edittext_height"-->
            <!--          android:background="@drawable/textview"-->
            <!--          android:drawSelectorOnTop="true"-->
            <!--          android:gravity="center_vertical"-->
            <!--          android:paddingStart="@dimen/size_16"-->
            <!--          android:paddingLeft="@dimen/size_16"-->
            <!--          android:textSize="@dimen/font_16"-->
            <!--          tools:ignore="RtlSymmetry" />-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10">

                <ImageView
                    android:id="@+id/iv_file"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_200"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_camera"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/iv_clear"
                    android:layout_width="@dimen/image_32"
                    android:layout_height="@dimen/image_32"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_baseline_close_24"
                    android:visibility="invisible"
                    tools:ignore="ContentDescription"
                    tools:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5">

                <LinearLayout
                    android:id="@+id/btn_add_foto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/galery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_5"
                        android:layout_marginRight="@dimen/size_5"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/size_10"
                        android:text="Galeri"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_5"
                        android:layout_marginLeft="@dimen/size_5"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/size_10"
                        android:text="Kamera"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </FrameLayout>

            <TextView
                style="@style/textNormalBlue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="?selectableItemBackground"
                android:text="Project"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/kategori"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/bg_spinner"
                android:drawSelectorOnTop="true"
                android:textSize="@dimen/font_16" />

            <TextView
                style="@style/textNormalBlue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="?selectableItemBackground"
                android:text="Induk"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/sub_kategori"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/bg_spinner"
                android:drawSelectorOnTop="true"
                android:textSize="@dimen/font_16" />

            <TextView
                style="@style/textNormalBlue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="?selectableItemBackground"
                android:text="Cabang"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/detail_kategori"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/bg_spinner"
                android:drawSelectorOnTop="true"
                android:textSize="@dimen/font_16" />

            <TextView
                style="@style/textNormalBlue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="?selectableItemBackground"
                android:text="Ranting"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/sub_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/bg_spinner"
                android:drawSelectorOnTop="true"
                android:textSize="@dimen/font_16" />

            <TextView
                style="@style/textNormalBlue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="?selectableItemBackground"
                android:text="Tanggal"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/bg_spinner"
                android:drawSelectorOnTop="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/size_16"
                android:textSize="@dimen/font_16" />

            <TextView
                style="@style/textNormalBlue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:background="?selectableItemBackground"
                android:text="Keterangan"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/uraian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/textview"
                android:drawSelectorOnTop="true"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/size_16"
                android:paddingLeft="@dimen/size_16"
                android:textSize="@dimen/font_16"
                tools:ignore="RtlSymmetry" />

<!--            <TextView-->
<!--                style="@style/textNormalBlue"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginTop="@dimen/spacing_small"-->
<!--                android:layout_marginBottom="@dimen/spacing_small"-->
<!--                android:background="?selectableItemBackground"-->
<!--                android:text="Nominal"-->
<!--                tools:ignore="HardcodedText" />-->
            <Button
                android:textAllCaps="false"
                android:id="@+id/btnTambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_button"
                android:padding="10dp"
                android:text="Tambah Detail"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:id="@+id/layKursus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"></LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/simpan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginBottom="@dimen/size_16"
                android:background="@drawable/bg_button"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_20"
                tools:ignore="HardcodedText" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>



</RelativeLayout>