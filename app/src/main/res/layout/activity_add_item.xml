<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

  <include
      layout="@layout/toolbar_view"
      android:id="@+id/toolbar_view" />

  <android.support.v4.widget.NestedScrollView
      android:layout_below="@+id/toolbar_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="@dimen/size_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <FrameLayout
          android:layout_marginTop="@dimen/size_10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="fitCenter"
            android:id="@+id/iv_file"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_200"
            tools:ignore="ContentDescription" />
        <ImageView
            android:visibility="invisible"
            tools:visibility="visible"
            android:id="@+id/iv_clear"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="@dimen/image_32"
            android:layout_height="@dimen/image_32"
            tools:ignore="ContentDescription" />
      </FrameLayout>
      <FrameLayout
          android:layout_marginTop="@dimen/size_5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/btn_add_foto"
            android:layout_margin="@dimen/size_10"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
          <TextView
              android:layout_marginEnd="@dimen/size_5"
              android:background="@drawable/bg_button"
              android:padding="@dimen/size_10"
              android:textAlignment="center"
              android:layout_weight="1"
              android:id="@+id/galery"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:text="Galeri"
              android:textSize="@dimen/font_16"
              android:layout_marginRight="@dimen/size_5"
              android:gravity="center_horizontal"
              tools:ignore="HardcodedText" />
          <TextView
              android:layout_marginStart="@dimen/size_5"
              android:background="@drawable/bg_button"
              android:padding="@dimen/size_10"
              android:textAlignment="center"
              android:layout_weight="1"
              android:id="@+id/camera"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:text="Kamera"
              android:textSize="@dimen/font_16"
              android:layout_marginLeft="@dimen/size_5"
              android:gravity="center_horizontal"
              tools:ignore="HardcodedText" />
        </LinearLayout>

      </FrameLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="?selectableItemBackground"
          android:text="Kategori"
          style="@style/textNormalBlue"
          android:layout_marginTop="@dimen/spacing_small"
          android:layout_marginBottom="@dimen/spacing_small"
          tools:ignore="HardcodedText" />

      <Spinner
          android:id="@+id/kategori"
          android:layout_width="match_parent"
          android:layout_height="@dimen/edittext_height"
          android:background="@drawable/bg_spinner"
          android:drawSelectorOnTop="true"
          android:textSize="@dimen/font_16"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="?selectableItemBackground"
          android:text="Sub Kategori"
          style="@style/textNormalBlue"
          android:layout_marginTop="@dimen/spacing_small"
          android:layout_marginBottom="@dimen/spacing_small"
          tools:ignore="HardcodedText" />

      <Spinner
          android:id="@+id/sub_kategori"
          android:layout_width="match_parent"
          android:layout_height="@dimen/edittext_height"
          android:background="@drawable/bg_spinner"
          android:drawSelectorOnTop="true"
          android:textSize="@dimen/font_16"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="?selectableItemBackground"
          android:text="Detail Kategori"
          style="@style/textNormalBlue"
          android:layout_marginTop="@dimen/spacing_small"
          android:layout_marginBottom="@dimen/spacing_small"
          tools:ignore="HardcodedText" />

      <Spinner
          android:id="@+id/detail_kategori"
          android:layout_width="match_parent"
          android:layout_height="@dimen/edittext_height"
          android:background="@drawable/bg_spinner"
          android:drawSelectorOnTop="true"
          android:textSize="@dimen/font_16"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="?selectableItemBackground"
          android:text="Pos"
          style="@style/textNormalBlue"
          android:layout_marginTop="@dimen/spacing_small"
          android:layout_marginBottom="@dimen/spacing_small"
          tools:ignore="HardcodedText" />

      <Spinner
          android:id="@+id/sub_detail"
          android:layout_width="match_parent"
          android:layout_height="@dimen/edittext_height"
          android:background="@drawable/bg_spinner"
          android:drawSelectorOnTop="true"
          android:textSize="@dimen/font_16"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="?selectableItemBackground"
          android:text="Tanggal"
          style="@style/textNormalBlue"
          android:layout_marginTop="@dimen/spacing_small"
          android:layout_marginBottom="@dimen/spacing_small"
          tools:ignore="HardcodedText" />

      <TextView
          android:paddingHorizontal="@dimen/size_16"
          android:gravity="center_vertical"
          android:id="@+id/tanggal"
          android:layout_width="match_parent"
          android:layout_height="@dimen/edittext_height"
          android:background="@drawable/bg_spinner"
          android:drawSelectorOnTop="true"
          android:textSize="@dimen/font_16"/>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="?selectableItemBackground"
          android:text="Keterangan"
          style="@style/textNormalBlue"
          android:layout_marginTop="@dimen/spacing_small"
          android:layout_marginBottom="@dimen/spacing_small"
          tools:ignore="HardcodedText" />

      <TextView
          android:gravity="center_vertical"
          android:id="@+id/uraian"
          android:paddingStart="@dimen/size_16"
          android:layout_width="match_parent"
          android:layout_height="@dimen/edittext_height"
          android:background="@drawable/textview"
          android:drawSelectorOnTop="true"
          android:textSize="@dimen/font_16"
          android:paddingLeft="@dimen/size_16"
          tools:ignore="RtlSymmetry" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:background="?selectableItemBackground"
          android:text="Nominal"
          style="@style/textNormalBlue"
          android:layout_marginTop="@dimen/spacing_small"
          android:layout_marginBottom="@dimen/spacing_small"
          tools:ignore="HardcodedText" />

      <EditText
          android:gravity="center_vertical"
          android:paddingStart="@dimen/size_16"
          android:id="@+id/nominal"
          android:layout_width="match_parent"
          android:layout_height="@dimen/edittext_height"
          android:background="@drawable/textview"
          android:drawSelectorOnTop="true"
          android:textSize="@dimen/font_16"
          android:paddingLeft="@dimen/size_16"
          tools:ignore="RtlSymmetry" />
      <android.support.v7.widget.AppCompatButton
          android:id="@+id/simpan"
          android:layout_marginTop="@dimen/size_16"
          android:layout_width="match_parent"
          android:layout_height="@dimen/button_height"
          android:background="@drawable/bg_button"
          android:text="Simpan"
          android:textAllCaps="false"
          android:textColor="@color/white"
          android:textSize="@dimen/font_20"
          android:layout_marginBottom="@dimen/size_16"
          tools:ignore="HardcodedText" />
    </LinearLayout>


  </android.support.v4.widget.NestedScrollView>



</RelativeLayout>